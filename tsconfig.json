{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "types": [
      "node"
    ], // blocks conflicting globals
    "forceConsistentCasingInFileNames": true
  },
  "references": [
    {
      "path": "./example/api"
    },
    {
      "path": "./example/app"
    },
    {
      "path": "./example/contract"
    },
    {
      "path": "./packages/composooor"
    }
  ],
  "include": [],
  "exclude": [
    "**/node_modules"
  ]
}
